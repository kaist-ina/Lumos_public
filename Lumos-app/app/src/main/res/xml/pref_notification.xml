<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <EditTextPreference
        android:key="participantId"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference android:title="Upload Data"
        android:key="uploadDataButton"
        android:summary="Upload tracking data to the storage"/>

    <Preference android:title="Push Data"
        android:key="pushDataButton"
        android:summary="Push tracking data to the cloud" />



</PreferenceScreen>
